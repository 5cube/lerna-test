{
  "version": "0.2.2-alpha.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "allowBranch": [
        "master",
        "dev",
        "next"
      ],
      "message": "chore(release): publish %s"
    },
    "version": {
      "message": "chore(release): publish %s"
    }
  }
}
